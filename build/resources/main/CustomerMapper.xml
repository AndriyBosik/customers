<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.customers.mapper.mybatis.ICustomerMapper">
    <resultMap id="customerMapping" type="com.example.customers.entity.Customer">
        <id property="id" column="id" />
        <result property="name" column="name" />
        <result property="phone" column="phone" />
        <result property="street" column="street" />
        <result property="city" column="city" />
        <result property="state" column="state" />
        <result property="zip" column="zip" />
        <result property="latitude" column="latitude" />
        <result property="longitude" column="longitude" />
        <result property="contactName" column="contact_name" />
        <result property="contactPhone" column="contact_phone" />
        <result property="contractorType" column="contractor_type" />
        <result property="createdAt" column="created_at" />
        <result property="active" column="active" />
    </resultMap>

    <select id="getAll" resultMap="customerMapping">
        SELECT * FROM customers
    </select>

    <select id="getCount" resultType="java.lang.Integer">
        SELECT COUNT(id) FROM customers
    </select>
</mapper>